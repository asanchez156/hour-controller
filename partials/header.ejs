  <!--Login modal -->
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLlb" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <form id="loginForm" action="/login" method="POST">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <% if (user){ %>
                      <h4 class="modal-title" id="loginLbl">Sesión iniciada</h4>
                    <% } else { %>
                      <h4 class="modal-title" id="loginLbl">Iniciar sesión</h4>
                    <% } %>
                </div>
                <div class="modal-body">
                    <div class="loginContent">
                        <% if (user){ %>
                            <div class="row row-centered">
                                <div class="form-group">
                                    Ya has iniciado una sesión.
                                </div>
                            </div>
                        <% } else { %>
                            <div class="row row-centered">
                                <div class="form-group">
                                    <div class="form-item col-md-6 col-sm-6 col-xs-6 col-centered">
                                        <label for="username"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Usuario</label>
                                    </div>
                                    <div class="form-item col-md-6 col-sm-6 col-xs-6 col-centered">
                                        <input type="text" class="form-control" id="username" name="username" required>
                                    </div>

                                    <div class="form-item col-md-6 col-sm-6 col-xs-6 col-centered">
                                        <label for="password"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span> Contraseña</label>
                                    </div>
                                    <div class="form-item col-md-6 col-sm-6 col-xs-6 col-centered">
                                        <input type="password" class="form-control" id="password" name="password" required>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                  <% if (!user){ %>
                      <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                  <% } %>
                </div>
            </form>
        </div>
    </div>
</div>
<!--End Login modal -->

<!--Workinday batch modal -->
<div class="modal fade" id="newWorkingDayModal" tabindex="-1" role="dialog" aria-labelledby="newWorkingDayModalLlb" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
        <form id="newWorkingDayForm">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="newWorkingDayModalLbl">
                      <div class="form-item col-md-3 col-sm-5 col-xs-5">
                          <label for="paleDate">Nuevo día</label>
                      </div>

                      <div class="form-item col-md-3 col-sm-5 col-xs-5">
                          <div class="input-group date" data-provide="datepicker" data-id="datepickerBatch">
                              <input type="text" class="form-control" id="dateBatch" name="dateBatch">
                              <div class="input-group-addon">
                                  <span class="glyphicon glyphicon-th"></span>
                              </div>
                          </div>
                      </div>
                    </h4>

                </div>
                <div class="modal-body">
                    <div id="newWorkingDayErrorsDiv">
                    </div>
                    <div id="newWorkingDayPanelContent">
                        <input type="hidden" id="newWorkingDayPanelCounter" value=0/>
                        <div class="panel panel-primary" id="newWorkingDayPanelPale">
                            <div class="panel-heading">
                                <h3 class="panel-title">Pales</h3>
                            </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="form-group">

                                        <div class="form-item col-md-3 col-sm-6 col-xs-6">
                                            <label for="palesBatch">Numero de pales</label>
                                        </div>
                                        <div class="form-item col-md-3 col-sm-6 col-xs-6">
                                            <div class="input-group">
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="palesBatch">
                                                        <span class="glyphicon glyphicon-minus"></span>
                                                    </button>
                                                  </span>
                                                <input id="palesBatch" name="palesBatch" class="form-control input-number" value="11" min="1" max="20" type="text">
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="palesBatch">
                                                        <span class="glyphicon glyphicon-plus"></span>
                                                    </button>
                                                 </span>
                                            </div>
                                        </div>
                                        <div class="form-item col-md-3 col-sm-6 col-xs-6">
                                            <label for="paleDescription">Nota</label>
                                        </div>
                                        <div class="form-item col-md-3 col-sm-6 col-xs-6">
                                            <input type="text" class="form-control" id="paleDescription" name="paleDescription">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <button type="button" class="btn btn-success pull-right" onclick="addEmployeePanel()">
                                     <span class="glyphicon glyphicon-plus"></span>
                                </button>
                                <button type="button" class="btn btn-danger pull-right" onclick="removeEmployeePanel()">
                                     <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button id="saveNewWorkingDayBtn" type="button" class="btn btn-primary" onclick="saveNewWorkingDayBatch()">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!--End Workingday batch modal -->
